<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadHouseActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:id="@+id/imageContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
        </LinearLayout>

        <Button
            android:id="@+id/selectImagesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Upload images"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"/>

        <!-- Adresse -->
        <EditText
            android:id="@+id/upload_House_Adresse"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/lavender_border"
            android:hint="Adresse"
            android:padding="16dp"
            android:textColor="@color/purple"
            android:layout_marginBottom="15dp" />

        <!-- Nombre de pièces -->
        <EditText
            android:id="@+id/upload_House_nbPiece"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/lavender_border"
            android:hint="Nombre de pièces (ex. S+3)"
            android:padding="16dp"
            android:textColor="@color/purple"
            android:layout_marginBottom="15dp" />

        <!-- Prix par mois -->
        <EditText
            android:id="@+id/upload_House_PrixMois"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/lavender_border"
            android:hint="Prix par mois"
            android:inputType="numberDecimal"
            android:padding="16dp"
            android:textColor="@color/purple"
            android:layout_marginBottom="15dp" />

        <!-- Type de propriété -->
        <EditText
            android:id="@+id/upload_House_TypeProp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/lavender_border"
            android:hint="Type de propriété (Appartement, Villa, etc.)"
            android:padding="16dp"
            android:textColor="@color/purple"
            android:layout_marginBottom="15dp" />

        <!-- Description -->
        <EditText
            android:id="@+id/upload_House_Description"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/lavender_border"
            android:hint="Description"
            android:padding="16dp"
            android:gravity="top"
            android:textColor="@color/purple"
            android:layout_marginBottom="15dp" />

        <!-- Équipements -->
        <EditText
            android:id="@+id/upload_House_Equipments"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/lavender_border"
            android:hint="Équipements (ex. Wifi, Climatisation)"
            android:padding="16dp"
            android:textColor="@color/purple"
            android:layout_marginBottom="15dp" />

        <!-- Localisation -->
        <EditText
            android:id="@+id/upload_House_Location"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/lavender_border"
            android:hint="Localisation (Ville, région, etc.)"
            android:padding="16dp"
            android:textColor="@color/purple"
            android:layout_marginBottom="15dp" />

        <!-- Bouton Sauvegarder -->
        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Sauvegarder"
            android:textSize="18sp"
            android:backgroundTint="@color/purple"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp" />

    </LinearLayout>
</ScrollView>
